     * @param  \Illuminate\Http\Request  $request
     * @return \Illuminate\Http\Response
     */
    public function store(Request $request)
    {
        $input = $request->all();
        Contact::create($input);

        // Send email to customer
        Mail::send('email.contact', $input, function ($message) use ($input) {

            $message->from('akjra.vu@gmail.com', 'Akjra Vu');

            $message->to($input['email'])->subject(Config::get('myconfig.SITE_NAME').' - Contact!');

        });

        Session::flash('request_message', 'Send contact successfull, thank you!');

        return redirect()->back();
    }

